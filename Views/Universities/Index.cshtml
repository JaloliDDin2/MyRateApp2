        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UniName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniCountry)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniState)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniWebsite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UniEmail)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.UniId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.UniId">Details</a> |
