@model IEnumerable<MyRateApp2.Models.University>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UniName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniCountry)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniWebsite)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UniEmail)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
